extends layout

block scripts
    - var menu = 'room';
    script(src='/lib/bootstrap-number-input/bootstrap-number-input.js')

block content
    #container
        .title(style='font-size: 72px; margin: 25px;')= title
        #optionBox
            .title Select your color
            #colorGroup.btn-group(role='group', aria-label='...')
        #optionBox
            p.title Adjust game options
            #fieldCountWrapper.btn-group.numberWrapper
                input#fieldCountNumber.form-control.input-lg(type='number', value='33', min='1', max='111', step='2', placeholder='Fields count')
            br
            #energePercentageWrapper.btn-group.numberWrapper
                input#energePercentageNumber.form-control.input-lg(type='number', value='5', min='0', max='20', placeholder='Energe field percentage')
            br
            #intervalWrapper.btn-group.numberWrapper
                input#intervalNumber.form-control.input-lg(type='number', value='5', min='1', max='80', placeholder='Game speed')
            br
        #optionBox
            #keybindingTableWrapper.btn-group.col-md-3
                table#keybindingTable.table.table-bordered-dark.table-striped-dark
                    thead
                        tr
                            th Action
                            th Keybinding
                    tbody
                        tr
                            td Pause & resume
                            td
                                kbd Space
                        tr
                            td Toggle navigation
                            td
                                kbd Enter
                                | &nbsp;or&nbsp;
                                kbd Q
                        tr
                            td Toggle power text
                            td
                                kbd Alt
                        tr
                            td Restart
                            td
                                kbd ESC
                                | &nbsp;or&nbsp;
                                kbd `
                        tr
                            td Set target field
                            td
                                kbd Click
                        tr
                            td Remove energe field
                            td
                                kbd Shift + Click
                        tr
                            td Explode energe field
                            td
                                kbd Ctrl + Click
